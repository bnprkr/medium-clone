extends layout.pug 

include utils.pug 

block content 
  main 
    .follows-container
      .following-container
        h2 Following
        .following-box-container
          each follow in following 
            .follow-box(id=`${follow.id}`) 
              h3.username #{follow.username}
              button.follow-button.following Following
            
      .not-following-container
        h2 Not following
        .not-following-box-container
          each follow in notFollowing 
            .follow-box(id=`${follow.id}`) 
              h3.username #{follow.username}
              button.follow-button.not-following Following

  script(src="/follow.js")
