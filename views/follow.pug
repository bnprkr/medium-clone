extends layout.pug 

include utils.pug 

block content 
  main 
    .follows 
      .following
        h2 Following
        each follow in following 
          .follow-box 
            h3.username #{follow.username}
            button.follow-button.following(id=`${follow.id}`) Follow 
            
      .not-following
        h2 Not following
        each follow in notFollowing 
          .follow-box 
            h3.username #{follow.username}
              follow.username 
            button.follow-button.not-following(id=`${follow.id}`) Follow 

  script(src="/follow.js")
