extends layout.pug

block content 
  main 
    each story in stories 
      article 
        .story-box 
          .story-author 
            p #{story.author}
          .story-title 
            h2 #{story.title} 
          .story-text-sample 
            each para in story.sample.split('\n')
              p #{para}
          .story-box-bottom-bar 
            .left 
              .story-likes
                span #{story.numLikes} 
            .right 
              .story-comments 
                span #{story.numComments}
          
