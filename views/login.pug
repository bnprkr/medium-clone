extends layout.pug

include utils.pug 

block content 
  main
    +validationErrorSummary(errors)
    .login-form-container
      .login-form
        form(action='/login', method='post')
          .login-form-inputs
            input(type='hidden', name='_csrf', value=csrfToken)
            +field('Email', 'email', email)
            +field('Password', 'password', null, 'password')
          .login-form-buttons
            button.demo-login Demo Login
            button(type='submit').login User Login
            a(href='/register').register Register